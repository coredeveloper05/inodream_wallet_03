<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TokenViewFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/balance_scrollview_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        >
        <ScrollView
            android:id="@+id/balance_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape_balance_info_bg_round"
                        android:elevation="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <TextView
                            android:id="@+id/my_assets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="@string/balance_my_assets"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/my_assets_value"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="￦20,231,268"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/my_assets" />

                        <View
                            android:id="@+id/divide_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/black_700"
                            app:layout_constraintTop_toBottomOf="@+id/my_assets_value"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@+id/divide_line"
                            app:layout_constraintStart_toStartOf="@+id/divide_line"
                            >
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <ImageButton
                                        android:id="@+id/main_button01"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/ic_balance_receive"
                                        android:background="@drawable/ripple_pupple_20_round"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textSize="14dp"
                                        android:textColor="@color/white"
                                        android:text="@string/receive"
                                        android:layout_marginTop="7dp"
                                        android:gravity="center"
                                        tools:ignore="MissingConstraints"
                                        />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="10dp"
                                    tools:ignore="MissingConstraints"
                                    />
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <ImageButton
                                        android:id="@+id/main_button02"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/ic_balance_send"
                                        android:background="@drawable/ripple_pupple_20_round"
                                        />
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textSize="14dp"
                                        android:textColor="@color/white"
                                        android:text="@string/send"
                                        android:layout_marginTop="7dp"
                                        android:gravity="center"
                                        tools:ignore="MissingConstraints"
                                        />
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="10dp"
                                    tools:ignore="MissingConstraints"
                                    />
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <ImageButton
                                        android:id="@+id/main_button03"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/ic_balance_swap"
                                        android:background="@drawable/ripple_pupple_20_round"
                                        />
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textSize="14dp"
                                        android:textColor="@color/white"
                                        android:text="@string/swap"
                                        android:layout_marginTop="7dp"
                                        android:gravity="center"
                                        tools:ignore="MissingConstraints"
                                        />
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="10dp"
                                    tools:ignore="MissingConstraints"
                                    />
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <ImageButton
                                        android:id="@+id/main_button04"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/ic_balance_setting"
                                        android:background="@drawable/ripple_pupple_20_round"
                                        />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textSize="14dp"
                                        android:textColor="@color/white"
                                        android:text="@string/transaction_history"
                                        android:layout_marginTop="7dp"
                                        android:gravity="center"
                                        tools:ignore="MissingConstraints"
                                        />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#f9f9ff"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_token_area_round"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/token_eth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:id="@+id/token_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="71dp"
                                android:src="@drawable/ic_token_01"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="ETH"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_symbol"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/separate_pipe01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="|"
                                android:textColor="@color/gray_400"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_name"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/token_network_name_ko"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="이더리움"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                android:textColor="#5539e3"
                                app:layout_constraintLeft_toRightOf="@id/separate_pipe01"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.307"
                                />

                            <TextView
                                android:id="@+id/token_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                tools:text="BALANCE-ETH"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/gray_800"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_value_ko"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                tools:text="￦18,231,125"
                                android:textColor="@color/gray_800"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@id/token_name"
                                app:layout_constraintTop_toBottomOf="@id/token_name"
                                app:layout_constraintVertical_bias="0.133" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="#19000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/token_tether"
                            android:layout_width="match_parent"
                            android:layout_height="71dp"
                            >
                            <ImageView
                                android:id="@+id/token_symbol02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_token_03"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_name02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="USDT"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_symbol02"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/separate_pipe02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="|"
                                android:textColor="@color/gray_400"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_name02"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/token_network_name_ko02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="이더리움"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                android:textColor="#17c0b7"
                                app:layout_constraintLeft_toRightOf="@id/separate_pipe02"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.307"
                                />

                            <TextView
                                android:id="@+id/token_value02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                tools:text="1,00000USDT"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/gray_800"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_value_ko02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                tools:text="￦18,231,125"
                                android:textColor="@color/gray_800"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@id/token_name02"
                                app:layout_constraintTop_toBottomOf="@id/token_name02"
                                app:layout_constraintVertical_bias="0.133" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="#19000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/token_fon"
                            android:layout_width="match_parent"
                            android:layout_height="71dp"
                            >
                            <ImageView
                                android:id="@+id/token_symbol03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_token_02"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_name03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="FON"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_symbol03"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/separate_pipe03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="|"
                                android:textColor="@color/gray_400"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/token_name03"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.307" />

                            <TextView
                                android:id="@+id/token_network_name_ko03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="이더리움"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                android:textColor="#5539e3"
                                app:layout_constraintLeft_toRightOf="@id/separate_pipe03"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.307"
                                />

                            <TextView
                                android:id="@+id/token_value03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                tools:text="12,00000ETH"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/gray_800"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <TextView
                                android:id="@+id/token_value_ko03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                tools:text="￦18,231,125"
                                android:textColor="@color/gray_800"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@id/token_name03"
                                app:layout_constraintTop_toBottomOf="@id/token_name03"
                                app:layout_constraintVertical_bias="0.133" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="#19000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/main_token_spacer01"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    >
                </View>

                <LinearLayout
                    android:id="@+id/transact_history_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ripple_blue_20_round_empty"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_token_spacer01"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/token_transact_history"
                        android:textColor="#0bcac0"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>