<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.SocialTermAgreeActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/ic_term_top_background"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:textSize="50sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#ffffff"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/sign_up"
            android:textSize="18sp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="#ffffff"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/sign_up_caution"
            android:textSize="12sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#ffffff"
            android:textAlignment="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="62dp"
                android:layout_marginHorizontal="31dp"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/check_term_agreement_all_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/term_agreement_all"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textColor="#000000"
                        android:background="?attr/selectableItemBackground"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >
                        <CheckBox
                            android:id="@+id/check_term_agreement_all"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selector_checkbox"
                            android:text=""/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#19000000"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/term_detail_button01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_mandatory"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="#0bcac0"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/term_service"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_light"
                            android:textColor="#000000"
                            />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_right_arrow"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >
                        <CheckBox
                            android:id="@+id/check_term_service"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selector_checkbox"
                            android:text=""/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/term_detail_button02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_mandatory"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="#0bcac0"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/term_privacy_policy"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_light"
                            android:textColor="#000000"
                            />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_right_arrow"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >
                        <CheckBox
                            android:id="@+id/check_term_privacy_policy"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selector_checkbox"
                            android:text=""/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/term_detail_button03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_optional"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/term_location_policy"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_light"
                            android:textColor="#000000"
                            />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_right_arrow"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >
                        <CheckBox
                            android:id="@+id/check_term_location_policy"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selector_checkbox"
                            android:text=""/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/term_detail_button04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_optional"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/term_advertise_alarm_policy"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_light"
                            android:textColor="#000000"
                            />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_right_arrow"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        >
                        <CheckBox
                            android:id="@+id/check_term_advertise_alarm_policy"
                            android:checked="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selector_checkbox"
                            android:text=""/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="32dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/inter_light"
                        android:text="@string/term_advertise_description"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:id="@+id/term_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="26dp"
                android:background="@drawable/ripple_blue_20_round_empty"
                android:gravity="center"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/confirm"
                    android:textColor="#0bcac0"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>