<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.TokenLockActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_toolbar"
            layout="@layout/normal_top_toolbar"
            />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f9f9ff"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="@string/lockup_support_network"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_balance_info_bg_round"
                android:orientation="vertical"
                >
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginHorizontal="27dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fon_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:text="@string/token_symbol_name_fon"
                        android:layout_marginLeft="13dp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="27dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:text="@string/total_received_token"
                        />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:text="48.1111 FON"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="27dp"
                    android:background="@drawable/shape_white_round_empty"
                    android:orientation="vertical"
                    android:paddingVertical="8dp"
                    >
                    
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#7961ef"
                            android:textSize="12sp"
                            android:text="@string/total_locked_token"
                            />
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#7961ef"
                            android:textSize="12sp"
                            android:text="76.1%"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="10dp"
                            android:background="#d9d9d9"
                            android:layout_marginHorizontal="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#7961ef"
                            android:textSize="12sp"
                            android:text="35.2489 FON"
                            android:layout_marginRight="20dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#ff9c21"
                            android:textSize="12sp"
                            android:text="@string/total_unlocked_token"
                            />
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#ff9c21"
                            android:textSize="12sp"
                            android:text="76.1%"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="10dp"
                            android:background="#d9d9d9"
                            android:layout_marginHorizontal="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#ff9c21"
                            android:textSize="12sp"
                            android:text="35.2489 FON"
                            android:layout_marginRight="20dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unlock_schedule"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/inter_semi_bold"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/unlocked_schedule_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>