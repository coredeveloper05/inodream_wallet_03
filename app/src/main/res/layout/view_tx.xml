<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/gray_round_bu_ripple"
    android:clickable="true"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_tab_select_plus"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/plus_circle" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:lineSpacingExtra="6sp"
            android:text="0xjhdgh…dfg0fhdf03"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:lineSpacingExtra="6sp"
            android:text="0.00254 ETH"
            android:textColor="#e3e3e3"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="2023.03.28 14:24"
            android:textColor="#808080"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:background="@drawable/swap_squ_orange"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="8sp"
                android:text="받기 완료"
                android:textColor="#ff9c21"
                android:textSize="10sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="8.3dp"
                android:layout_height="8.3dp"
                android:src="@drawable/check_circle"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>