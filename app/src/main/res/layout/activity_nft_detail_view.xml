<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.NftDetailViewActivity">

    <include
        android:id="@+id/top_toolbar"
        layout="@layout/normal_top_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_nft_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="22dp"
                android:src="@drawable/nft_img01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNftId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="itlesdj...#2"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Creator Name"
                        android:textColor="#9C9A9A"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/send2_round_puple"
                    android:gravity="center"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/tvNftPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.22ETH"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvNftDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="33dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.01"
                android:lines="3"
                android:text="NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용NFT설명내용 …"
                android:textColor="#757575"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:letterSpacing="-0.01"
                android:text="NFT정보"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/wallet_add_gray_round"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="보유 건수"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="3SPACE ART"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="컨트랙트 명"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvContractName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="3SPACE ART"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="컨트랙트 주소"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="0xb717f6cbjsdgsdg09sw…"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="토큰 ID"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="3568…"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="토큰 표준"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvStandard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="ERC-721"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="블록체인"
                        android:textColor="#020202"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvChain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="8sp"
                        android:text="이더리움"
                        android:textColor="#8a8a8a"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:letterSpacing="-0.01"
                android:text="NFT거래이력"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/traLinerLayout01"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_round_bu_ripple"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_tab_select_plus"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/plus_circle" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:lineSpacingExtra="6sp"
                        android:text="0xjhdgh…dfg0fhdf03"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:lineSpacingExtra="6sp"
                        android:text="0.00254 ETH"
                        android:textColor="#e3e3e3"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:text="2023.03.28 14:24"
                        android:textColor="#808080"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="@drawable/swap_squ_orange"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="8sp"
                            android:text="받기 완료"
                            android:textColor="#ff9c21"
                            android:textSize="10sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="8.3dp"
                            android:layout_height="8.3dp"
                            android:src="@drawable/check_circle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/traLinerLayout02"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_round_bu_ripple"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_tab_select_minus"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/minus_circle" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:lineSpacingExtra="6sp"
                        android:text="0xjhdgh…dfg0fhdf03"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:lineSpacingExtra="6sp"
                        android:text="0.00254 ETH"
                        android:textColor="#e3e3e3"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:text="2023.03.28 14:24"
                        android:textColor="#808080"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="@drawable/swap_squ_minus"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="8sp"
                            android:text="보내기 완료"
                            android:textColor="#7961ef"
                            android:textSize="10sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="8.3dp"
                            android:layout_height="8.3dp"
                            android:src="@drawable/check_circle_3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/nftSendTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/send2_round_next_bu_ripple"
                android:clickable="true"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:text="보내기"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>